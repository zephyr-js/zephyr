{
  "extends": "tsconfig/base.json",
  "compilerOptions": {
    "declaration": true,
    "outDir": "dist",
    "baseUrl": "src",
    "paths": {
      "@/*": [
        "*"
      ]
    },
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/__mocks__",
    "**/*.spec.ts",
    "**/*.spec-d.ts"
  ]
}